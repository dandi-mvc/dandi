{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "out",
    "lib": [
      "ESNext"
    ],
    "baseUrl": ".",
    "paths": {
      "@dandi/*": [
        "./packages/dandi/*"
      ],
      "@dandi-contrib/*": [
        "./packages/dandi-contrib/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "out",
    "builder/dist"
  ]
}
